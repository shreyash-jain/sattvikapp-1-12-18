<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/foreground"

    tools:context="com.example.shreyash.myapplication.FragmentCancel">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >



    <com.applandeo.materialcalendarview.CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:headerColor="@color/background"
        app:type="one_day_picker"
       />
<LinearLayout
    android:layout_width="match_parent"
    android:paddingRight="40dp"
    android:paddingLeft="40dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        app:cardBackgroundColor="@color/background"
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardElevation="1.5dp"
        app:contentPadding="1dp"
        android:layout_margin="0dp"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true"
        >

        <android.support.v7.widget.CardView
            app:cardCornerRadius="8dp"
            android:padding="16dp"
            layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">


                        <com.tomer.fadingtextview.FadingTextView
                            android:id="@+id/fadingTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/foreground"

                            android:layout_gravity="center"
                            android:gravity="center"



                            android:textSize="20dp"
                            app:timeout="500"
                            app:texts="@array/examples" />




                </LinearLayout>



            </LinearLayout>



        </android.support.v7.widget.CardView>
    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        app:cardBackgroundColor="@color/background"
        android:id="@+id/card_view2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardElevation="1.5dp"
        app:contentPadding="1dp"
        android:layout_margin="0dp"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true"
        >

        <android.support.v7.widget.CardView
            app:cardCornerRadius="8dp"
            android:padding="16dp"
            layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Diets remaining to Cancel"
                        android:textSize="20dp"
                        android:id="@+id/diets_cancel"
                        android:gravity="center"/>



                </LinearLayout>



            </LinearLayout>



        </android.support.v7.widget.CardView>
    </android.support.v7.widget.CardView>



</LinearLayout>

    <android.support.v7.widget.CardView
        app:cardCornerRadius="2dp"
        android:padding="16dp"
        android:layout_marginTop="12dp"

        app:cardElevation="2dp"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">
                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingTop="16dp"
                    android:src="@drawable/ic_rotate_left_black_24dp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:padding="12dp"
                    android:layout_height="wrap_content"
                    android:text="Previous Cancellation Status"
                    android:textSize="20dp"
                    android:id="@+id/recent_cancel"
                  />






            </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:layout_gravity="end"
            android:background="@android:color/darker_gray"
            android:elevation="1dp"

            android:fadingEdge="vertical"
            android:paddingTop="4dp"
            android:requiresFadingEdge="vertical"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textSize="22dp"
                android:gravity="start"/>
            <TextView
                android:layout_width="match_parent"
                android:gravity="end"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:id="@+id/cancel_date"
                android:textSize="22dp"
                android:textColor="@android:color/holo_green_dark"
                android:layout_height="wrap_content"
                android:text="NA"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            android:paddingBottom="12dp"
            android:paddingRight="30dp"
            android:paddingTop="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diets"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textSize="22dp"
                android:gravity="start"/>
            <TextView
                android:layout_width="match_parent"
                android:gravity="end"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:id="@+id/cancel_diets"
                android:textSize="22dp"
                android:textColor="@android:color/holo_green_dark"
                android:layout_height="wrap_content"
                android:text="NA"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:layout_gravity="end"
            android:background="@android:color/darker_gray"
            android:elevation="1dp"

            android:fadingEdge="vertical"
            android:paddingTop="4dp"
            android:requiresFadingEdge="vertical"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="30dp"
                android:paddingBottom="12dp"
                android:paddingRight="30dp"
                android:paddingTop="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_red_light"
                    android:text="Status"
                    android:fontFamily="sans-serif-condensed"
                    android:textStyle="bold"
                    android:textSize="22dp"
                    android:gravity="start"/>
                <TextView
                    android:layout_width="match_parent"
                    android:gravity="end"
                    android:fontFamily="sans-serif-condensed"
                    android:textStyle="bold"
                    android:id="@+id/cancel_status"
                    android:textSize="22dp"
                    android:textColor="@android:color/holo_green_dark"
                    android:layout_height="wrap_content"
                    android:text="NA"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:layout_gravity="end"
                android:background="@android:color/darker_gray"
                android:elevation="1dp"

                android:fadingEdge="vertical"
                android:paddingTop="4dp"
                android:requiresFadingEdge="vertical"></View>




        </LinearLayout>



    </android.support.v7.widget.CardView>


</LinearLayout>
</ScrollView>